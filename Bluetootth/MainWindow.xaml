<Window x:Class="Bluetootth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bluetooth Scanner"
        Height="350"
        Width="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Search Bluetooth Devices"
                Height="35"
                Click="Search_Click"/>

        <ListBox x:Name="DevicesList"
                 Grid.Row="1"
                 Margin="0,10,0,0"/>
    </Grid>
</Window>